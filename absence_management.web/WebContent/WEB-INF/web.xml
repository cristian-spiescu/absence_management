<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <display-name>absence_management.web</display-name>
  
    <!-- Http Flex Session attribute and binding listener support -->
    <listener>
        <listener-class>flex.messaging.HttpFlexSession</listener-class>
    </listener>

    <!-- MessageBroker Servlet -->
    <servlet>
        <servlet-name>MessageBrokerServlet</servlet-name>
        <servlet-class>flex.messaging.MessageBrokerServlet</servlet-class>
        <init-param>
            <param-name>services.configuration.file</param-name>
            <param-value>/WEB-INF/flex/services-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageBrokerServlet</servlet-name>
        <url-pattern>/messagebroker/*</url-pattern>
    </servlet-mapping>
  
  <servlet>
    <description>
		</description>
    <display-name>HelloWorldServlet</display-name>
    <servlet-name>HelloWorldServlet</servlet-name>
    <servlet-class>com.crispico.absence_management.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloWorldServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <description></description>
    <display-name>EmployeeTableController</display-name>
    <servlet-name>EmployeeTableController</servlet-name>
    <servlet-class>com.crispico.absence_management.controller.EmployeeTableController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeTableController</servlet-name>
    <url-pattern>/showEmployees.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>AbsenceTableController</display-name>
    <servlet-name>AbsenceTableController</servlet-name>
    <servlet-class>com.crispico.absence_management.controller.AbsenceTableController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AbsenceTableController</servlet-name>
    <url-pattern>/showAbsences.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>AbsenceTypeTableController</display-name>
    <servlet-name>AbsenceTypeTableController</servlet-name>
    <servlet-class>com.crispico.absence_management.controller.AbsenceTypeTableController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AbsenceTypeTableController</servlet-name>
    <url-pattern>/showTypes.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>EmployeeDeleteController</display-name>
    <servlet-name>EmployeeDeleteController</servlet-name>
    <servlet-class>com.crispico.absence_management.controller.EmployeeDeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeDeleteController</servlet-name>
    <url-pattern>/deleteEmp.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>EmployeeAddController</display-name>
    <servlet-name>EmployeeAddController</servlet-name>
    <servlet-class>com.crispico.absence_management.controller.EmployeeAddController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeAddController</servlet-name>
    <url-pattern>/addEmp.do</url-pattern>
  </servlet-mapping>
  
	<servlet>
    	<servlet-name>userValidator</servlet-name>
    	<servlet-class>test.UserValidator</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>userValidator</servlet-name>
    	<url-pattern>/userValidator</url-pattern>
	</servlet-mapping>  
    
   <filter>
    	<filter-name>UserCheckFilter</filter-name>
    	<filter-class>test.UserCheckFilter</filter-class>
    	<init-param>
       	 	<param-name>loginActionURI</param-name>
        	<param-value>/absence_management.web/userValidator</param-value>
    	</init-param>
	</filter> 
	<filter-mapping>
    	<filter-name>UserCheckFilter</filter-name>
    	<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<description></description>
		<display-name>Login</display-name>
		<servlet-name>Login</servlet-name>
		<servlet-class>test.SignInFB</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/signin_fb.do</url-pattern>
	</servlet-mapping>  
	
  
</web-app>