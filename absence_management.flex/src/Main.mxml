<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:ns="com.crispico.absence_management.view.*">
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			protected function chartsample1_absencesChangedHandler(event:Event):void {
				employeeTableTab.absenceListChanged = true;
				employeeTableTab.invalidateProperties();
				absenceTableTab.absenceTableListChanged = true;
				absenceTableTab.invalidateProperties();
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<mx:TabNavigator width="100%" height="100%">
		<s:NavigatorContent label="Employees" width="100%">
			<ns:EmployeeTable width="100%" height="100%" id="employeeTableTab"/>
		</s:NavigatorContent>
		<s:NavigatorContent label="Absences" width="100%">
			<ns:AbsenceTable width="100%" height="100%" id="absenceTableTab"/>
		</s:NavigatorContent>
		<s:NavigatorContent label="Charts" width="100%">
			<ns:ChartSample width="100%" height="100%" changes="chartsample1_absencesChangedHandler(event)"/>
		</s:NavigatorContent>
	</mx:TabNavigator>
</s:Application>
