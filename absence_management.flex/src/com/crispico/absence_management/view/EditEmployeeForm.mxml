<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 title="Edit" close="PopUpManager.removePopUp(this)" creationComplete="getAbsences(event)" width="1000" height="400">
	<fx:Script>
		<![CDATA[
			import com.crispico.absence_management.model.Absence;
			import com.crispico.absence_management.model.Employee;
			
			import mx.collections.ArrayCollection;
			import mx.controls.DataGrid;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;

			[Bindable]
			public var employee:Employee;	
			public var grid:mx.controls.DataGrid;
			public var absences:ArrayCollection = new ArrayCollection();
			
			protected function updateEmployee(event:MouseEvent):void {
				var emp:Employee = Employee(grid.selectedItem);
				employeeService.updateEmployee(emp);
				PopUpManager.removePopUp(this);
			}
			
			protected function getAbsences(event:FlexEvent):void {
				absencesGrid.dataProvider = employee.absences;
			}
			
			private function getEmployeeAbsencesResultHandler(event:ResultEvent):void {
				grid.dataProvider = ArrayCollection(event.result);	
			}	
			
			protected function deleteEmployeeAbsence(event:MouseEvent):void {
				var absence:Absence = Absence(absencesGrid.selectedItem);
				absenceService.deleteAbsence(absence);
				var i:Number = ArrayCollection(absencesGrid.dataProvider).getItemIndex(absence);
				ArrayCollection(absencesGrid.dataProvider).removeItemAt(i);	
			}
			
			private function addAbsenceModal(event:MouseEvent):void {
				var addAbsenceForm:AddAbsenceForm = new AddAbsenceForm();
				addAbsenceForm.employee = employee;
				addAbsenceForm.absencesGrid = absencesGrid;
				PopUpManager.addPopUp(addAbsenceForm, this, true);
				PopUpManager.centerPopUp(addAbsenceForm);	
			}
			
			private function editAbsenceModal(event:MouseEvent):void {
				var editAbsenceForm:EditAbsenceForm = new EditAbsenceForm();
				editAbsenceForm.employee = employee;
				editAbsenceForm.absence = Absence(absencesGrid.selectedItem);
				PopUpManager.addPopUp(editAbsenceForm, this, true);
				PopUpManager.centerPopUp(editAbsenceForm);		
			}
			
			private function formatDate(item:Object, column:DataGridColumn):String{
				return (item[column.dataField] as Date).date+"/"+((item[column.dataField] as Date).month+1)+"/"+(item[column.dataField] as Date).fullYear;
			}

			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:ChannelSet id="channelSet">
			<s:AMFChannel url="messagebroker/remoting-amf"/>
		</s:ChannelSet>
		<mx:RemoteObject id="employeeService" destination="employeeService" channelSet="{channelSet}" >
		</mx:RemoteObject>
		<mx:RemoteObject id="absenceService" destination="absenceService" channelSet="{channelSet}" >
		</mx:RemoteObject>
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
<s:Form>
	<s:FormItem label="first name">
		<s:TextInput text="@{employee.firstName}"/>
	</s:FormItem>
	<s:FormItem label="last name">
		<s:TextInput text="@{employee.lastName}"/>	
	</s:FormItem>
</s:Form>

	<s:HGroup>
		<s:Button label="Update info" click="updateEmployee(event)"></s:Button>
		<s:Button label="Delete absence" click="deleteEmployeeAbsence(event)" enabled="{absencesGrid.selectedItem != null}"></s:Button>
		<s:Button label="Add absence" click="addAbsenceModal(event); grid.selectedIndex = -1"/>
		<s:Button label="Edit absence" click="editAbsenceModal(event);" enabled="{absencesGrid.selectedItem !=null}"/>
	</s:HGroup>
	<mx:DataGrid id="absencesGrid" width="100%" height="100%" allowMultipleSelection="true" >
		<mx:columns>
			<mx:DataGridColumn dataField="id" headerText="ID"/>
			<mx:DataGridColumn dataField="startDate" headerText="start date" labelFunction="formatDate" />
			<mx:DataGridColumn dataField="endDate" headerText="end date"  labelFunction="formatDate"/>
			<mx:DataGridColumn dataField="type.type" headerText="type"/>
		</mx:columns>
	</mx:DataGrid>
</s:TitleWindow>
