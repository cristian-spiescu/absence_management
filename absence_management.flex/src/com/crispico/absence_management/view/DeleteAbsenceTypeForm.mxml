<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   close="PopUpManager.removePopUp(this); " title="Delete ">
	
	<fx:Script>
		<![CDATA[
			import com.crispico.absence_management.model.AbsenceType;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			public var absenceType:AbsenceType;		
			
			private function deleteAbsTypeResultHandler(event:ResultEvent):void{
				ExternalInterface.call("document.location.reload",true);
			}
			
			private function absenceTypeServiceFaultHandler(event:FaultEvent):void {
				Alert.show("Service invocation error: " + event.fault.faultString);				
			}
			
			private function functie () : void{
				absenceTypeService.deleteAbsType(absenceType);
				
			}
			
			private function refresh(): void {
				ExternalInterface.call("document.location.reload",true);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
		<s:ChannelSet id="channelSet">
			<s:AMFChannel url="messagebroker/remoting-amf"/>
		</s:ChannelSet>
		<mx:RemoteObject id="absenceTypeService" channelSet="{channelSet}" destination="absenceTypeService"
						 fault="absenceTypeServiceFaultHandler(event)">
			<mx:method name="deleteAbsType" result="deleteAbsTypeResultHandler(event)"/>
		</mx:RemoteObject>
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<s:Form id="DelAbsTypeForm">
		<s:Graphic>  
			<s:BitmapImage width="100" height="30"  fillMode="clip"	source="@Embed('D:/data/Images/AbsenceType.jpg')"/>
		</s:Graphic>
		<s:FormItem label="Are you sure?"/>
		<s:HGroup>
			<s:Button id="NO" label="No" click="PopUpManager.removePopUp(this);"/>
			<s:Button id="submitButton" label="Yes"
					  click="functie();PopUpManager.removePopUp(this); "/>	
		</s:HGroup>		
	</s:Form>
</s:TitleWindow>

