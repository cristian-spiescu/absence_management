<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 close="PopUpManager.removePopUp(this)" width="300" height="200">
	<fx:Script>
		<![CDATA[
			import com.crispico.absence_management.model.AbsenceType;
			import mx.controls.DataGrid;
			import mx.managers.PopUpManager;

			public var grid:mx.controls.DataGrid;		
			public var absenceType:AbsenceType;
			
			protected function updateAbsenceType(event:MouseEvent):void {
				absenceTypeService.updateAbsenceType(absenceType);
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:ChannelSet id="channelSet">
			<s:AMFChannel url="messagebroker/remoting-amf"/>
		</s:ChannelSet>
		<mx:RemoteObject id="absenceTypeService" destination="absenceTypeService" channelSet="{channelSet}" >
			
		</mx:RemoteObject>
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"/>
	</s:layout>
	<s:Form>
		<s:FormItem label="type">
			<s:TextInput text="@{absenceType.type}"  />
		</s:FormItem>

	</s:Form>
	<s:Button label="save" click="updateAbsenceType(event)"></s:Button>
		
</s:TitleWindow>
