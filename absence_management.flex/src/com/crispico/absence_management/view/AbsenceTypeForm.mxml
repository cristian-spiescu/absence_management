<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="200" height="130"
		 close="PopUpManager.removePopUp(this)"
		 title = "Add type">
	
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Declarations>
		<s:ChannelSet id="channelSet">
			<s:AMFChannel url="messagebroker/remoting-amf"/>
		</s:ChannelSet>
		<mx:RemoteObject id="absenceTypeService" destination="absenceTypeService" channelSet="{channelSet}" >
			<mx:method name="addAbsenceType" result="addAbsenceTypeResultHandler(event)">
				<mx:arguments>
					<arg1>
						{type}
					</arg1>
				</mx:arguments>
			</mx:method>
		</mx:RemoteObject>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.crispico.absence_management.model.AbsenceType;
			
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			
			[Bindable]
			public var type:AbsenceType;
			
			public function saveTypeClickHandler(event:MouseEvent):void {
				absenceTypeService.addAbsenceType(type);
				PopUpManager.removePopUp(this);
			}
			
			public function addAbsenceTypeResultHandler(event:ResultEvent):void {
				Alert.show("Absence type added!");
			}
		]]>
	</fx:Script>
	
	<s:VGroup>
		<s:HGroup paddingLeft="5" paddingTop="10">
			<s:Label text="Type:" />
			<s:TextInput text="@{type.absenceType}" id = "textinput"/>
		</s:HGroup>
		<s:HGroup paddingLeft="3" paddingTop="10" paddingBottom="5">
			<mx:Button label="Save" click = "saveTypeClickHandler(event)"/>
		</s:HGroup>
	</s:VGroup>
</s:TitleWindow>
