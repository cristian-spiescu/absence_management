<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

    <class name="Absence" table="ABSENCES">
        <id name="id" column="ID" >
            <generator class="native"/>
        </id>
		<property name="startDate" />
		<property name="endDate"/>
			
		<many-to-one name="employee" class="Employee"
            column="employeeid" not-null="true"
            lazy="false" />
            
  		  <many-to-one name="absenceType" class="AbsenceType"
            column="idT" not-null="true"
             lazy="false" />
     	  </class>

</hibernate-mapping>