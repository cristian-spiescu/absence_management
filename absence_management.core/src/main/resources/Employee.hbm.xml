<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

	<class name="Employee" table="EMPLOYEE">
		<id name="ID">
			<generator class="native" />
		</id>
		<property name="firstName" />
		<property name="lastName" />
        <!--  un angajat la mai multe absente -->
		<set name="absences" inverse="true" lazy="false" cascade="delete">
			<key column="employee_id" not-null="true" />
			<one-to-many class="Absence" />
		</set>
	</class>
	
</hibernate-mapping>