<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

    <class name="Absence" table="ABSENCE">
        <id name="absence_id" column="ABSENCE_ID">
            <generator class="native"/>
        </id>
        <property name="start"/>
        <property name="finish"/>
        <many-to-one name="type" 
             class="AbsenceType"
             column="ABSENCE_TYPE_ID"
             cascade="all"
             lazy="false">
		</many-to-one>
        <many-to-one name="employee" 
             class="Employee"
             column="ID"
             cascade="all"
             lazy="false">
		</many-to-one>
    </class>

</hibernate-mapping>