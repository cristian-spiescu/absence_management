<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

    <class name="Absence" table="ABSENCE">
        <id name="id" column="IDabsence">
            <generator class="native"/>
        </id>
        <property name="startDate"/>
        <property name="endDate"/>
        
        <many-to-one name="employee" lazy="false" class="Employee" fetch="select"> 
        <column name="emp_id" not-null="true" />
        </many-to-one> 
        
        <many-to-one name="absenceType" lazy="false" class="AbsenceType" fetch="select"> 
        <column name="abs_id" not-null="true" />
        </many-to-one>     
    </class>

</hibernate-mapping>