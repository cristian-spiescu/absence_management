<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

    <class name="AbsenceType" table="ABSENCETYPE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="type" type="string"/>
      <set name="absences" table="absence" cascade="delete" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="type_id" not-null="true" />
            </key>
            <one-to-many class="Absence" />
     </set>
    </class>

</hibernate-mapping>