<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

	<class name="AbsenceType" table="ABSENCETYPE">
		<id name="idT" column="ID">
			<generator class="native" />
		</id>
		<property name="absenceType" />
		<set name="absenceList" table="absences" inverse="true" lazy="false"
			fetch="select" cascade="all">
			<key>
				<column name="idt" not-null="true" />
			</key>
			<one-to-many class="Absence" />
		</set>
	</class>

</hibernate-mapping>