<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.crispico.absence_management.model">

    <class name="AbsenceType" table="ABSENCETYPE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="absenceType"/>
        <set name="absences" table="absencetype" inverse="true" lazy="false" fetch="select">
	            <key>
	                <column name="Type" not-null="true" />
	            </key>
	            <one-to-many class="Absence" />
	     </set>     
    </class>

</hibernate-mapping>